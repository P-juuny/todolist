<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/entryFragment">
    <fragment
        android:id="@+id/entryFragment"
        android:name="com.example.todolist.EntryFragment"
        android:label="fragment_entry"
        tools:layout="@layout/fragment_entry" >
        <action
            android:id="@+id/action_entryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/entryFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_entryFragment_to_editTodoFragment"
            app:destination="@id/editTodoFragment"
            app:popUpTo="@id/entryFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.todolist.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/editTodoFragment"
        android:name="com.example.todolist.fragment.EditTodoFragment"
        android:label="EditTodoFragment" />
</navigation>