<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fixed_todo_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    tools:context=".fragment.FixedOverviewFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고정 할 일"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/editTodoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex) 객프 강의 듣기"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <CheckBox android:id="@+id/inputMonday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="월"/>
        <CheckBox android:id="@+id/inputTuesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="화"/>
        <CheckBox android:id="@+id/inputWednesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="수"/>
        <CheckBox android:id="@+id/inputThursday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="목"/>
        <CheckBox android:id="@+id/inputFriday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="금"/>
        <CheckBox android:id="@+id/inputSaturday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="토"/>
        <CheckBox android:id="@+id/inputSunday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="일"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/AddTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/fixed_item_todo_list"/>

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_gravity="center"
        android:backgroundTint="#E1D6F4"
        android:textColor="#4A4A4A"/>

</LinearLayout>